-- THIS CODE RUNS IN THE MYSQL!!

--LETS SELECT THE CITY AND LENGTH OF THE CITIES
SELECT CITY, LENGTH(CITY) FROM STATION 

--AND ORDER THEM BY LOOKING LENGTHS, BUT THE SMALLEST COMES FIRST
ORDER BY LENGTH(CITY) ASC,

--AND SELECT FIRST ROW
CITY LIMIT 1;

--LETS SELECT THE CITY AND LENGTH OF THE CITIES
SELECT CITY, LENGTH(CITY) FROM STATION 

--LETS ORDER THEM BY LOOKING LENGTHS, BUT THE BIGGEST COMES FIRST
ORDER BY LENGTH(CITY) DESC, 
-- AND SELECT THE FIRST ROW
CITY LIMIT 1;
